{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@myapp/auth-next/*": ["./packages/auth-next/*"],
      "@myapp/app/*": ["packages/app/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["packages/**/*", "apps/**/*"]
}
